{
  "name": "@sanphandinh/vn-lunar",
  "version": "1.0.0",
  "type": "module",
  "description": "A comprehensive Vietnamese Lunar Calendar library with TypeScript implementation for calculating lunar dates, festivals, and astrology information. Production-ready with robust error handling and 100% test coverage.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.mjs",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "browser": "./lib/index.umd.js",
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/index.d.ts"
      ]
    }
  },
  "files": [
    "lib",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "clean": "rimraf lib",
    "prebuild": "npm run clean && npm run type-check",
    "obfuscate": "node ./scripts/obfuscate.mjs",
    "prepublishOnly": "npm run build && npm run obfuscate",
    "release": "npm publish --access public",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "pre-checks": "npm run type-check && npm test"
  },
  "keywords": [
    "vn-lunar",
    "node",
    "browser",
    "vietnamese",
    "lunar",
    "calendar",
    "âm-lịch",
    "dương-lịch",
    "can-chi",
    "tết",
    "festival",
    "astrology"
  ],
  "author": "San Phan Đình",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanphandinh/vn-lunar.git"
  },
  "bugs": {
    "url": "https://github.com/sanphandinh/vn-lunar/issues"
  },
  "homepage": "https://github.com/sanphandinh/vn-lunar#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^18.0.0",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "esbuild": "^0.25.9",
    "javascript-obfuscator": "^4.1.1",
    "obfuscate": "^0.0.11",
    "rimraf": "^6.0.1",
    "rollup": "^4.49.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "typescript": "^5.9.2",
    "vitest": "^4.0.3"
  },
  "overrides": {
    "glob": "^11.0.3",
    "rimraf": "^6.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
